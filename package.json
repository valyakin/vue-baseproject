{
  "name": "vue-baseproject",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "lint-style": "stylelint src/**/*scss",
    "generate:component": "yo ./lib/generators/component.js",
    "generate:page": "yo ./lib/generators/page.js",
    "storybook": "start-storybook -p 6006 -c config/storybook",
    "build-storybook": "build-storybook -c config/storybook"
  },
  "dependencies": {
    "joi-browser": "^13.4.0",
    "uniqid": "^5.0.3",
    "vue": "^2.5.16",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-beta.15",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.15",
    "@vue/cli-service": "^3.0.0-beta.15",
    "@vue/eslint-config-standard": "^3.0.0-rc.3",
    "lint-staged": "^7.2.0",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.0.1",
    "stylelint": "^9.3.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.1.3",
    "stylelint-webpack-plugin": "^0.10.5",
    "vue-cli-plugin-storybook": "^0.1.12",
    "vue-template-compiler": "^2.5.16",
    "yeoman-generator": "^3.0.0",
    "yo": "^2.0.3",
    "yorkie": "^1.0.3"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "stylelint src/**/*scss",
      "git add"
    ],
    "*.scss": [
      "stylelint src/**/*scss",
      "git add"
    ]
  }
}